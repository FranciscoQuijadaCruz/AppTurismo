<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/degrade">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="243dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:cropToPadding="false"
        app:srcCompat="@drawable/logoemp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:scaleType="fitXY"
        android:src="@drawable/iconologoapp" />
</LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnPunto"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/interes" />

        <ImageButton
            android:id="@+id/btnNaturaleza"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/naturalpat" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnMapa"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mapa" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btnGastronomia"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/gastro" />

        <ImageButton
            android:id="@+id/btnHistoria"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/historia" />

    </LinearLayout>




</LinearLayout>